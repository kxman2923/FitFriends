<div id="groupPage" data-user-id = {{_id}}>
	<div class = "page-header">
		<h1> {{group.name}} </h1>
	</div>

	<div>
	<h4> {{group.description}} </h4>
	</div>
	<div class = "members panel panel-primary">
	<div class = panel-heading>
		<h5>Members</h5>
	</div>
	<div class = panel-body>
		{{#each group.members}}
			 <h5>{{local.username}}</h5>
		{{/each}}
	</div> 
	</div>
	<div id=join-error></div>
	{{#if notInGroup}}
		<button class='btn join-btn' id={{group._id}}> Join! </button>
	{{/if}}
<div id="group">
  <div class="error">
    {{#if error}}
      {{error}}
    {{/if}}
  </div>
	<div id="invite-member-container">
		<form id="invite-member-form" data-group-id = {{group._id}}>
			<h3>Invite Users to This Group!</h3>
			<div class="invite-message"></div>
			<div class="form-group">
				<input type="text" name="username" class="form-control" placeholder="Your friend's username" id="invite-username" required />
				<button type="submit" class="btn" id="invite-member-btn">Invite</button>
			</div>
		</form>  
	</div>
</div>